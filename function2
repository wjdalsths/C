int get_integer()
{
	int n;
	printf("정수를 입력하세요 >>");
	scanf("%d", &n);
	return n;
}
int add(int x, int y)
{
	return x + y;
}
int f(int n)
{
	int s = 1;
	for (int i = 1; i <= n; i++)
	{
		s *= i;
	}
	printf("팩토리얼 값은 : %d ", s);
}
int fac(int n)
{
	int s = 1;
	for (int i = 1; i <= n; i++)
	{
		s *= i;
	}
	return s;
}
