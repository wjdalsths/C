int main()
{
	char ch;
	double num=1;
	while (1)
	{
		menu();
		printf("메뉴선택: ");
		ch=getchar();
		if (ch == 'c')
		{
			printf("섭씨온도를 입력하세요> ");
			scanf("%lf", &num);
			printf("화씨온도: %lf\n\n", c2f(num));
		}
		else if (ch == 'f')
		{
			printf("화씨온도를 입력하세요> ");
			scanf("%lf", &num);
			printf("섭씨온도: %lf\n\n", f2c(num));
		}
		else if (ch=='q')
		{
			printf("종료\n");
			break;
		}
		getchar();
	}
  
  return 0;
}
